{
	"description": "圈子文章",
	"bsonType": "object",
	"required": ["content"],
	"permission": {
		"read": "doc.status==true",
		"create": "auth.uid != null",
		"update": "auth.uid == doc.uid",
		"delete": "auth.uid == doc.uid || 'childadmin' in auth.permission"
	},
	"properties": {
		"_id": {
			"description": "存储文档 ID（文章 ID），系统自动生成"
		},
		"content": {
			"bsonType": "string",
			"description": "内容",
			"label": "内容",
			"trim": "both"
		},
		"uid": {
			"bsonType": "string",
			"description": "用户id",
			"label": "用户",
			"foreignKey": "uni-id-users._id",
			"forceDefaultValue": {
			  "$env": "uid"
			}
		},
		"cid": {
			"bsonType": "string",
			"description": "圈子id",
			"label": "圈子",
			"foreignKey": "mdsh-discover._id"
		},
		"images": {
			"bsonType": "array",
			"title": "图片",
			"description": "多张图片",
			"multiple": true, 
			"fileMediaType": "image", 
			"fileExtName": "jpg,png",
			"maxLength": 9
		},
		"avatar": {
			"bsonType": "array",
			"title": "评论头像",
			"description": "评论头像",
			"defaultValue": []
		},
		"up": {
			"bsonType": "int",
			"description": "点赞",
			"label": "点赞",
			"defaultValue": 0
		},
		"down": {
			"bsonType": "int",
			"description": "反对",
			"label": "反对",
			"defaultValue": 0
		},
		"view": {
			"bsonType": "int",
			"description": "浏览量",
			"label": "浏览量",
			"defaultValue": 0
		},
		"collect_num": {
			"bsonType": "int",
			"description": "收藏数",
			"label": "收藏数",
			"defaultValue": 0
		},
		"common_num": {
			"bsonType": "int",
			"description": "评论数",
			"label": "评论数",
			"defaultValue": 0
		},
		"is_report": {
			"bsonType": "bool",
			"title": "举报",
			"description": "是否举报",
			"defaultValue": false
		},
		"report_uid": {
			"bsonType": "string",
			"description": "举报用户id",
			"label": "举报用户",
			"foreignKey": "uni-id-users._id"
		},
		"report_time": {
			"bsonType": "timestamp",
			"description": "举报时间"
		},
		"school_id": {
			"bsonType": "string",
			"description": "学校id",
			"foreignKey": "mdsh-school._id"
		},
		"location": {
			"bsonType": "地址信息",
			"description": "地址信息",
			"defaultValue":""
		},
		"is_top": {
			"bsonType": "bool",
			"title": "是否置顶",
			"description": "是否置顶",
			"defaultValue": false
		},
		"is_best": {
			"bsonType": "bool",
			"title": "是否精华",
			"description": "是否精华",
			"defaultValue": false
		},
		"status": {
			"bsonType": "bool",
			"title": "状态",
			"description": "状态",
			"defaultValue": true
		},
		"create_date": {
			"bsonType": "timestamp",
			"description": "创建时间",
			"forceDefaultValue": {
				"$env": "now"
			}
		}
	}
}
