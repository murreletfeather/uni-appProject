{
	"description": "店铺业务员申请单",
	"bsonType": "object",
	"required": ["real_name", "des", "phone"],
	"permission": {
		"read": true,
		"create": "auth.uid != null",
		"update": true,
		"delete": false
	},
	"properties": {
		"_id": {
			"description": "存储文档 ID（文章 ID），系统自动生成"
		},
		"uid": {
			"bsonType": "string",
			"description": "用户id",
			"label": "用户",
			"foreignKey": "uni-id-users._id",
			"forceDefaultValue": {
			  "$env": "uid"
			}
		},
		"des": {
			"bsonType": "string",
			"description": "申请说明",
			"label": "申请说明",
			"trim": "both"
		},
		"type": {
			"bsonType": "string",
			"description": "类型1业务员2店铺",
			"label": "类型",
			"trim": "both",
			"defaultValue":"1"
		},
		"status": {
			"bsonType": "int",
			"title": "状态",
			"description": "状态1待审核2通过3拒绝",
			"defaultValue": 1
		},
		"phone": {
			"bsonType": "string",
			"description": "手机号",
			"pattern": "^\\+?[0-9-]{3,20}$",
			"label": "手机号",
			"errorMessage": {
				"pattern": "{label}格式无效"
			  }
		},
		"real_name": {
			"bsonType": "string",
			"description": "真实姓名",
			"label": "真实姓名",
			"trim": "both"
		},
		"college": {
			"bsonType": "string",
			"description": "学院",
			"label": "学院",
			"trim": "both"
		},
		"major": {
			"bsonType": "string",
			"description": "专业班级",
			"label": "专业班级",
			"trim": "both"
		},
		"grade": {
			"bsonType": "int",
			"description": "年级",
			"label": "年级",
			"trim": "both"
		},
		"store_name": {
			"bsonType": "string",
			"description": "店铺名称",
			"label": "店铺名称",
			"trim": "both"
		},
		"school_id": {
			"bsonType": "string",
			"description": "学校id",
			"label": "学校id",
			"foreignKey": "mdsh-school._id"
		},
		"ref_reason": {
			"bsonType": "string",
			"description": "拒绝原因",
			"label": "拒绝原因",
			"trim": "both"
		},
		"sh_time": {
			"bsonType": "timestamp",
			"description": "审核时间",
			"label": "审核时间"
		},
		"address": {
			"bsonType": "string",
			"description": "店铺地址",
			"label": "店铺地址",
			"trim": "both"
		},
		"create_date": {
			"bsonType": "timestamp",
			"description": "创建时间",
			"forceDefaultValue": {
				"$env": "now"
			}
		}
	}
}
